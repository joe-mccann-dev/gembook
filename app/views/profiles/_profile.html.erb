<% if profile.profile_picture.present? %>
  <p class="profile_picture">
    <%= link_to image_tag(profile
                  .profile_picture
                  .representation(resize_to_fit: [250, 250], convert: "png"), alt: 'a user profile picture', id: 'profile-picture'),
                url_for(profile.profile_picture),
                class: 'profile-picture',
                id: "profile-#{profile.id}-picture" %>
  </p>
<% else %>
      <% if user == current_user %>
        <%= link_to image_tag('blank-profile-picture.png', size: '250x250'),
                  new_user_profile_path(current_user),
                  class: 'profile-picture' %>
      <% else %>
        <%= image_tag('blank-profile-picture.png', size: '250x250' )%>
      <% end %>
<% end %>
<p class="bio">Bio:
  <%= profile.bio %>
</p>
<p class="nickname">Nickname:
  <%= profile.nickname %>
</p>
<p class="current-city">Current City:
  <%= profile.current_city %>
</p>
<p class="hometown">Hometown:
  <%= profile.hometown %>
</p>
