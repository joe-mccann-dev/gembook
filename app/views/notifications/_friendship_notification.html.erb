<% if notification.description == 'new friend request' %>
  <li class="friend-request  individual-notification">
    <p class="notification-description">
      <%= notification.description %> from 
      <%= link_to notification.sender.full_name, notification.sender %> ~
      <em><%= time_ago_in_words(notification.created_at) %> ago</em>
    </p>
    <div class="friendship-buttons">
      <%= render partial: 'friendship_accept', locals: { notification: notification } %>
      <%= render partial: 'friendship_decline', locals: { notification: notification } %>
      <%= render partial: 'dismiss_notification_button', locals: { notification: notification } %>
    </div>
  </li>
<% else %>
  <li class="individual-notification accepted-request">
    <p class="notification-description">
      <%= link_to notification.sender.full_name, notification.sender %>
      <%= notification.description %> ~
      <em><%= time_ago_in_words(notification.created_at) %> ago</em>
    </p>
    <%= render partial: 'dismiss_notification_button', locals: { notification: notification } %>
  </li>
<% end %>
