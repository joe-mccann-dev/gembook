<div class="container">
  <div class="page-container">
    <div class="heading-container">
      <h1 class="gembook-link">Gembook</h1>
      <h2>Change your password</h2>
    </div>
    <div class="devise-form">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>
        <div class="field">
          <%= f.label :password, "New password" %><br />
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em><br />
          <% end %>
          <%= f.password_field :password, autofocus: false, autocomplete: "new-password", size: "25" %>
        </div>
        <div class="field">
          <%= f.label :password_confirmation, "Confirm new password" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", size: "25" %>
        </div>
        <div class="actions">
          <%= f.submit "Change my password", class: 'submit button' %>
        </div>
      <% end %>
      <div class="devise-form">
        <div class="devise-links">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
