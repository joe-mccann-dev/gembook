  <% if user.profile.present? && user.profile.profile_picture%>
  <%= link_to image_tag(user.profile
                .profile_picture
                .representation(resize_to_fill: [50, 50], convert: "png"), alt: 'a user profile picture', id: 'profile-picture'),
              user_path(user),
              class: 'profile-picture',
              id: "profile-#{user.profile.id}-picture" %>
<% else %>
  <%= link_to image_tag('blank-profile-picture.png', size: "50x50"),
                user_path(user),
                class: 'profile-picture' %>
<% end %>
