<h1>Find Users</h1>

<%= form_with(url: search_users_path, method: :get) do |f| %>
  <%= f.text_field :query, placeholder: 'Search for users by name.', required: true %>
  <%= f.submit 'Search' %>
<% end %>

<% if params[:query].present? %>
<h2>Search Results</h2>
  <ul>
    <%= render partial: 'result', collection: @results %>
  </ul>
  <%= content_tag(:em, "No users found") if @results.none? %>
<% end %>

<h2>Friends</h2>

<%= button_to "Show Friends", show_friends_users_path, method: :get, remote: true, id: 'show-friends' %>
<ul id="friends">
</ul>

<h2>Other Users</h2>

<%= button_to "Show Friend Suggestions", show_other_users_users_path, method: :get, remote: true, id: 'show-other-users' %>

<ul id="other-users">
</ul>
