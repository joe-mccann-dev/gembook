<!DOCTYPE html>
<html>
  <head>
    <title>Gembook</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag asset_path('favicon-32x32.png') %>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Ubuntu:wght@400;700&display=swap" rel="stylesheet">
  </head>
  <body>
    <nav>
      <div class="navbar left-links">
        <% if user_signed_in? %>
          <%= link_to root_url do %>
            <ion-icon class="diamond" name="diamond"></ion-icon>
          <% end %>
          <%= link_to "Users", users_path %>
          <% if current_user.received_notifications.unread.any? %>
            <%= link_to notifications_path, class: 'notifications-link' do %>
              <span class="notifications-link">Notifications</span>
              <ion-icon class="notifications-bell" name="notifications"></ion-icon>
            <% end %>
          <% else %>
            <%= link_to "Notifications", notifications_path, class: 'notifications-link' %>
          <% end %>
      </div>
      <div class="navbar">
        <h1 class="nav-title">
          <%= link_to root_url do %>
            <div>
              <ion-icon class="diamond-left" name="diamond"></ion-icon>
              <span class="gembook-link">GEMBOOK</span>
              <ion-icon class="diamond-right" name="diamond"></ion-icon>
            </div>
          <% end %>
        </h1>
      </div>
      <div class="navbar right-links">
          <%= link_to current_user.full_name, edit_user_registration_path %>
          <%= link_to "Sign out", destroy_user_session_path, :method => :delete %>
          <%= render partial: 'users/user_icon', locals: { user: current_user } %>
        <% end %>
      </div>
    </nav>
    <div id="flash-message">
      <% flash.each do |message_type, message| %>
        <%= content_tag(:p, message, class: "notification #{message_type}") %>
      <% end %>
    </div>
    <%= yield %>
    <%= debug(params) if Rails.env.development? %>
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
  </body>
</html>
