<!DOCTYPE html>
<html>
  <head>
    <title>Gembook</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag asset_path('favicon-32x32.png') %>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Ubuntu:wght@400;700&display=swap" rel="stylesheet">
  </head>
  <body>
    <nav>
      <div class="navbar left-links">
        <% if user_signed_in? %>
          <%= link_to root_url do %>
            <div class="logo">
              <%= link_to root_url, class: 'gembook-link' do%>
                <div class="gembook">
                  <ion-icon class="diamond" name="diamond"></ion-icon>
                  <span>Gembook</span>
                </div>
              <% end %>
            </div>
          <% end %>
          <%= link_to users_path do %>
            <div class="users-icon">
              <ion-icon name="people-circle-outline"></ion-icon>
            </div>
          <% end %>
          <% if current_user.received_notifications.unread.any? %>
            <%= link_to notifications_path, class: 'notifications-link' do %>
              <div class="notifications-bell">
                <div class="notifications-count">
                  <span><%= current_user.received_notifications.unread.length %></span>
                </div>
                <ion-icon name="notifications-outline"></ion-icon>
              </div>
            <% end %>
          <% else %>
            <%= link_to notifications_path, class: 'notifications-link'  do %>
              <div class="notifications-bell">
                <ion-icon name="notifications-outline"></ion-icon>
              </div>
            <% end %>
          <% end %>
        </div>
        <div class="navbar right-links">
          <%= link_to current_user.full_name, edit_user_registration_path %>
          <%= render partial: 'users/user_icon', locals: { user: current_user } %>
          <%= link_to destroy_user_session_path, :method => :delete, class: 'logout-link' do %>
            <div class="logout-icon">
              <ion-icon name="log-out-outline"></ion-icon>
            </div>
          <% end %>
        <% end %>
      </div>
    </nav>
    <div id="flash-message">
      <% flash.each do |message_type, message| %>
        <%= content_tag(:p, message, class: "notification #{message_type} message") %>
      <% end %>
    </div>
    <%= yield %>
    <%= debug(params) if Rails.env.development? %>
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
  </body>
</html>
