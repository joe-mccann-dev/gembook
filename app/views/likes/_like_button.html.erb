<% if likeable.likers.include?(current_user) %>
  <%= button_to "Like",
                polymorphic_path([likeable, current_user.find_like(likeable)]),
                method: :delete,
                remote: true,
                id: "#{object_to_s(likeable)}-#{likeable.id}-unlike" %>
<% else %>
  <%= button_to "Like",
                path,
                remote: true,
                class: 'liked',
                id: "#{object_to_s(likeable)}-#{likeable.id}-like" %>
<% end %>
